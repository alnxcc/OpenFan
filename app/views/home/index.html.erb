<div class="box" id="topics_index">
	<% @topics.each do |topic| %>
<div class="cell">
	<table cellpadding="0" cellspacing="0" border="0" width="100%">
		<tr>
			<td valign="top" class="avatar"><a href="<%=user_path(topic.user)%>"><img src="http://www.gravatar.com/avatar/<%=Digest::MD5.hexdigest(topic.user.email)%>?s=48" border="0" /></a></td>
			<td style="padding-left: 12px" valign="top">
				<div class="fr">
					<%if topic.posts.count>0%>
					<a href="<%=topic_path(topic)%>" class="count_livid"><%=topic.posts.count%></a>
					<%end%>
				</div>
				<div class="sep3"></div>
					<span class="bigger" style="font-size: 16px; line-height: 130%"><%=link_to topic.title, topic_path(topic)%></span>
				<div class="sep5"></div>
				<span class="created"><strong><a href="<%=node_path(topic.node)%>" class="node"><%=topic.node.title%></a> &nbsp;•&nbsp; </strong><a href="<%=user_path(topic.user)%>" class="dark"><%=h topic.user.username%></a></strong> &nbsp;•&nbsp;  <%=topic.body.jsize%> words &nbsp;•&nbsp; <%=topic.views%> Views <%if topic.posts.first %>&nbsp;•&nbsp; <%=h distance_of_time_in_words(topic.posts.first.created_at, Time.now)%> ago replied by <a href="<%=user_path(topic.posts.first.user)%>" class="dark"><%=h topic.posts.first.user.username%></a><%else%>&nbsp;•&nbsp; <%=h distance_of_time_in_words(topic.created_at, Time.now)%> ago<%end%></span>
			</td>
		</tr>
	</table>
